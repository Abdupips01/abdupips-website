  <script>
    /*********************
     * Simple client-side storage for demo admin
     * - Saves each submission to localStorage "abdupips_submissions"
     * - Admin link opens prompt; default password below (change it)
     *********************/

    const form = document.getElementById('interestForm');

    // Save to localStorage when form submits (also lets FormSubmit send email)
    form.addEventListener('submit', function(e) {
      try {
        // gather fields
        const entry = {
          id: Date.now(),
          fullname: form.fullname.value.trim(),
          country: form.country.value.trim(),
          state: form.state.value.trim(),
          address: form.address.value.trim(),
          phone: form.phone.value.trim(),
          whatsapp: form.whatsapp.value.trim(),
          email: form.email.value.trim(),
          interest: form.interest.value,
          message: form.message.value.trim()
        };

        // load existing
        const key = 'abdupips_submissions';
        const existing = JSON.parse(localStorage.getItem(key) || '[]');
        existing.unshift(entry); // newest first
        localStorage.setItem(key, JSON.stringify(existing));
        // note: letting default form submit continue to POST to FormSubmit
        // so visitor gets email and you receive it in your Gmail.

      } catch(err) {
        console.error('Save error', err);
      }
      // do not prevent default ‚Äî allow FormSubmit to process and redirect
    });

    // ADMIN PANEL
    const adminLink = document.getElementById('adminLink');
    const adminPanel = document.getElementById('adminPanel');
    const adminContent = document.getElementById('adminContent');
    const closeAdmin = document.getElementById('closeAdmin');
    const clearStorageBtn = document.getElementById('clearStorage');
    const exportCsvBtn = document.getElementById('exportCsv');

    // Change this password before making public
    const ADMIN_PASSWORD = '@Abdulcrypto1';

    adminLink.addEventListener('click', (ev) => {
      ev.preventDefault();
      const pass = prompt('Enter admin password:');
      if (pass === ADMIN_PASSWORD) {
        showAdminPanel();
      } else {
        alert('Incorrect password.');
      }
    });

    closeAdmin.addEventListener('click', () => { adminPanel.style.display = 'none'; adminPanel.setAttribute('aria-hidden','true'); });

    function showAdminPanel(){
      adminPanel.style.display = 'block';
      adminPanel.setAttribute('aria-hidden','false');
      renderAdminTable();
    }

    function renderAdminTable(){
      const key = 'abdupips_submissions';
      const arr = JSON.parse(localStorage.getItem(key) || '[]');
      if(!arr.length){
        adminContent.innerHTML = '<p class="small">No entries yet.</p>';
        return;
      }

      // build table
      let html = '<table><thead><tr>';
      html += '<th>Date</th><th>Name</th><th>Email</th><th>Phone</th><th>WhatsApp</th><th>Country</th><th>State</th><th>Address</th><th>Interest</th><th>Message</th>';
      html += '</tr></thead><tbody>';
      arr.forEach(row => {
        const date = new Date(row.id).toLocaleString();
        html += `<tr>
          <td>${escapeHtml(date)}</td>
          <td>${escapeHtml(row.fullname)}</td>
          <td>${escapeHtml(row.email)}</td>
          <td>${escapeHtml(row.phone)}</td>
          <td>${escapeHtml(row.whatsapp)}</td>
          <td>${escapeHtml(row.country)}</td>
          <td>${escapeHtml(row.state)}</td>
          <td>${escapeHtml(row.address)}</td>
          <td>${escapeHtml(row.interest)}</td>
          <td>${escapeHtml(row.message)}</td>
        </tr>`;
      });
      html += '</tbody></table>';
      adminContent.innerHTML = html;
    }

    function escapeHtml(s){
      if(!s) return '';
      return s.replaceAll('&','&amp;').replaceAll('<','&lt;').replaceAll('>','&gt;').replaceAll('"','&quot;');
    }

    // Clear all (confirm)
    clearStorageBtn.addEventListener('click', ()=>{
      if(confirm('Clear all saved submissions from this browser? This cannot be undone.')){
        localStorage.removeItem('abdupips_submissions');
        renderAdminTable();
        alert('Local submissions cleared.');
      }
    });

    // Export CSV
    exportCsvBtn.addEventListener('click', ()=>{
      const key = 'abdupips_submissions';
      const arr = JSON.parse(localStorage.getItem(key) || '[]');
      if(!arr.length){ alert('No entries to export.'); return; }

      const headers = ['Date','Full Name','Email','Phone','WhatsApp','Country','State','Address','Interest','Message'];
      const rows = arr.map(r => [
        new Date(r.id).toLocaleString(),
        r.fullname, r.email, r.phone, r.whatsapp, r.country, r.state, r.address, r.interest, r.message
      ]);
      const csv = [headers, ...rows].map(r => r.map(cell => `"${String(cell).replace(/"/g,'""')}"`).join(',')).join('\n');

      const blob = new Blob([csv], {type: 'text/csv;charset=utf-8;'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'abdupips_submissions.csv';
      a.click();
      URL.revokeObjectURL(url);
    });

    // reveal admin usage tip on load
    (function init(){
      // optionally, you can render existing entries in a small badge etc.
      // no-op
    })();
  </script>
</body>
